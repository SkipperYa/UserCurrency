{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AuthOptions": {
    "issuer": "UserCurrencyIssuer",
    "audience": "UserCurrencyAudience",
    "key": "a4a8cca7-b21d-48cb-88ce-fa7b725299e1"
  },
  "ReverseProxy": {
    "Routes": {
      "user-service": {
        "ClusterId": "user-service",
        "Match": {
          "Path": "/user-service/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/user-service"
          }
        ]
      },
      "currency-service": {
        "ClusterId": "currency-service",
        "Match": {
          "Path": "/currency-service/{**catch-all}"
        },
        "AuthorizationPolicy": "authPolicy",
        "Transforms": [
          {
            "PathRemovePrefix": "/currency-service"
          }
        ]
      }
    },
    "Clusters": {
      "user-service": {
        "Destinations": {
          "d1": {
            "Address": "https://localhost:5002/"
          }
        }
      },
      "currency-service": {
        "Destinations": {
          "d1": {
            "Address": "https://localhost:5004/"
          }
        }
      }
    }
  }
}
